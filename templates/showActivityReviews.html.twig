{% extends 'base.html.twig' %}

{% block body %}
	
			{% if scores is empty %}
				<p>No existen comentarios o puntuación para esta actividad porque nadie participó en ella</p>
			{% else %}
				{% for i in 0..(scores|length - 1) %}
					{% if scores[i] == true or reviews[i] == true %}

                      <section class="comment col-lg-9 mr-auto ml-auto">
					  	<h1 class="mr-auto ml-auto col-lg-7 ">
							Comentarios:
						</h1>
						<div class="cookie-card col-lg-12 mr-auto ml-auto">
							<span class="title">{{ username[i] }} {{ userlastname[i] }} </span>
							<p class="description">
                                    {{ reviews[i] }}
							</p>
							<div class="actions">
								<div class="accept">
								<img class="w-30 " src={{asset("assets/star.png")}} alt="Imagen icono de usuario ">
									<p> Puntuación: {{ scores[i] }}</p>
								</div>
							</div>
						</div>
					   </section>
					
					{% endif %}
				{% endfor %}
			{% endif %}

	
{% endblock %}

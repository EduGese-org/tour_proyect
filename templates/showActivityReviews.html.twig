{% extends 'base.html.twig' %}

{% block body %}

	{% if scores is empty %}
		<p>No existen comentarios o puntuación para esta actividad porque nadie participó en ella</p>
	{% else %}
		<section class="comment col-lg-9 mr-auto ml-auto">
		<h1 class="mr-auto ml-auto col-lg-7 ">
						Comentarios:
					</h1>
			{% for i in 0..(scores|length - 1) %}
				{% if scores[i] == true or reviews[i] == true %}
				
					<div class="card border-dark mb-3 col-lg-5 mr-auto ml-auto" style="max-width: 18rem;">
						<div class="card-header">{{ username[i] }} {{ userlastname[i] }}</div>
						<div class="card-body text-dark">
							<h5 class="card-title">{{ reviews[i] }}</h5>
							<p class="card-text"> Puntuación: {{ scores[i] }}</p>
						</div>
						</div>


					{% endif %}
				{% endfor %}
			</section>
		{% endif %}


	{% endblock %}


{% block body %}

	{% if scores is empty %}
		<p>No existen comentarios o puntuación para esta actividad porque nadie participó en ella</p>
	{% else %}
		<section class="comment col-lg-9 mr-auto ml-auto">
		<h1 class="mr-auto ml-auto col-lg-7 ">
						Comentarios:
					</h1>
			{% for i in 0..(scores|length - 1) %}
				{% if scores[i] == true or reviews[i] == true %}
				
				      <div class="comentario col-21" colspan="3">
                            <div class="d-flex">
                                <div class="col-5 col-md-5 text-capitalize"><strong>{{ username[i] }} {{ userlastname[i] }}</strong></div>
                                <div class="col-1"> | </div>
                                <div class="col-5 col-md-5" >Puntuación: {{ scores[i] }}</div>
                            </div>
                            <hr>
                            <div class="col-12"> {{ reviews[i] }} </div>
                        </div>


					{% endif %}
				{% endfor %}
			</section>
		{% endif %}


	{% endblock %}

{% extends 'base.html.twig' %}

{% block body %}
	<table>
		<thead>
			<tr>
				<th>User</th>
				<th>Score</th>
				<th>Review</th>

			</tr>
		</thead>
		<tbody>
			{% if scores is empty %}
				<p>No existen comentarios o puntuación para esta actividad porque nadie participó en ella</p>
			{% else %}
				{% for i in 0..(scores|length - 1) %}
					{% if scores[i] == true or reviews[i] == true %}
					<h1 class="mr-auto ml-auto col-lg-7 "> Comentarios: </h1>
						<div class="cookieCard col-lg-12 mr-auto ml-auto">
						
							<p class="cookieHeading">{{ username[i] }}
								{{ userlastname[i] }}
							</p>
							<p class="cookieDescription ">{{ reviews[i] }}
								<a href="#">What for?</a>
							</p>
							<button class="acceptButton">{{ scores[i] }}</button>
						</div>
						<tr>
							<td>{{ username[i] }}
								{{ userlastname[i] }}</td>
							<td>{{ scores[i] }}</td>
							<td>{{ reviews[i] }}</td>
						</tr>
					{% endif %}
				{% endfor %}
			{% endif %}

		</tbody>
	</table>
{% endblock %}

    {# {{scores}} #}

	<form action="{{ path('add_activity_review', { 'id': activity.idActivity, 'scores': activity.scores, 'average_score': activity.averageScore }) }}" method="post">
		<label tabindex="0" for="review">Escribe tu reseña aquí:</label>
		<textarea tabindex="0" name="review" id="review"></textarea>

		<label tabindex="0" for="score">Puntuación:</label>
		<select tabindex="0" id="score" name="score">
			<option tabindex="0" value="1">1</option>
			<option tabindex="0" value="2">2</option>
			<option tabindex="0" value="3">3</option>
            <option tabindex="0" value="4">4</option>
            <option tabindex="0" value="5">5</option>
		</select>


		<button tabindex="0" type="submit">Enviar</button>
		<div class="espacio"></div>
	</form>

{% endblock %}
